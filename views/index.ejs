<%- include('./partials/html-head') %>
<link rel="stylesheet" href="../stylesheets/index.css">
<%- include('./partials/nav') %>

<main>
  <div id="topSpaceBuffer"></div>
  <div id="welcomescreen">
    <p><b>Welcome to Homecooked.</b> For full access to the site, please login above. We promise not to track any of your information. We cannot promise through that your friends and family won't be tracking your calories though.</p>
  </div>
  <%recipes.forEach(recipe => { %>
    <div id="recipesDetailView">
      <h2><%=recipe.name%></h2>
      <% if (recipe.picture) {%>
        <img src="<%=recipe.picture%>" alt="Picture of prepared food">
        <% } %>
      <p>
        Preperation Time: <%=recipe.PrepTime%><br/>
        Cooking Time: <%=recipe.cookTime%><br/>
        Cooking Temperature: <%=recipe.temp%> Fahrenheit<br/>
        Number of Portions: <%=recipe.yield%><br/>
        <div id="ingredienList">
          <% recipe.ingredients.forEach(ingredient => { %>
            <%=ingredient %><br/>
          <%});%>
        </div>
        Cooking Instructions: <%=recipe.instructions%><br/>
        Created by: <img id="createdByProfilePic" src="<%=recipe.ownerAvatar%>"> <%=recipe.ownerName %> 
              </p>

    <div id="ratingBox">
      Average Rating<br/>
      <div class="Stars" style="--rating: 2.3;" aria-label="Rating"></div>
    </div>
    </div>
    
    <% }) %> 

</main>

<%- include('./partials/footer') %>
