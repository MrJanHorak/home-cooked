<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<link rel="stylesheet" href="/stylesheets/recipes/index.css">

<main>
  <div id="topSpaceBuffer"></div>
  <% if (user?.profile._id) { %>
  <div id="recipesIndexView">
    <% recipes.forEach(recipe =>{ %>
      <% if (recipe.visible) { %> 
        <a href="/recipes/<%= recipe._id %>">
          <div id="recipeIndexCard">
            <h2><%=recipe.name%></h2>
            <% if (recipe.picture) {%>
              <img id="recipePic" src="<%=recipe.picture%>" alt="Picture of prepared food">
            <% } %>
            <p>
              <b>Cook Time:</b> <%=recipe.cookTime%>  
              <b>Prep Time:</b> <%=recipe.PrepTime%><br/>
              <b>Temp:</b> <%=recipe.temp%> Fahrenheit<br/>
              <b>Portions:</b> <%=recipe.yield%><br/>
              <div id="cookInstructions"><b>Instructions:</b> <%=recipe.instructions%></div>
            </p>
          </div>
      <% } %>  
    <%})%>
  </div>
  <% } %>
  <%- include('../partials/footer') %>
</main>

